<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
          "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
          "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
	<session-factory>
		<property name="connection.url">jdbc:mysql://localhost/report</property>
		<property name="connection.driver_class">org.gjt.mm.mysql.Driver</property>
		<property name="connection.username">root</property>
		<property name="connection.password">123456</property>
		<property name="dialect">org.hibernate.dialect.MySQLDialect</property>
		<property name="hibernate.show_sql">true</property>
		<property name="hibernate.hbm2ddl.auto">update</property>
		<property name="hibernate.current_session_context_class">thread</property>
		<!-- 
		<property name="connection.autoReconnect">true</property>
		<property name="connection.autoReconnectForPools">true</property>
		<property name="connection.is-connection-validation-required">true</property>
		 -->
		<property name="hibernate.connection.release_mode">after_transaction</property>

		<mapping resource="com/yozo/report/server/config/hbm/DataField.hbm.xml" />
		<mapping resource="com/yozo/report/server/config/hbm/DataRule.hbm.xml" />
		<mapping resource="com/yozo/report/server/config/hbm/DataRuleCond.hbm.xml" />
		<mapping resource="com/yozo/report/server/config/hbm/DataSource.hbm.xml" />
		<mapping resource="com/yozo/report/server/config/hbm/DataTable.hbm.xml" />
		<mapping resource="com/yozo/report/server/config/hbm/DataType.hbm.xml" />
		<mapping resource="com/yozo/report/server/config/hbm/FillMode.hbm.xml" />
		<mapping resource="com/yozo/report/server/config/hbm/FillModeItem.hbm.xml" />
		<mapping resource="com/yozo/report/server/config/hbm/HyperLink.hbm.xml" />
		<mapping resource="com/yozo/report/server/config/hbm/HyperLinkInfo.hbm.xml" />
		<mapping resource="com/yozo/report/server/config/hbm/JoinCond.hbm.xml" />
		<mapping resource="com/yozo/report/server/config/hbm/LevelField.hbm.xml" />
		<mapping resource="com/yozo/report/server/config/hbm/ListSelectItem.hbm.xml" />
		<mapping resource="com/yozo/report/server/config/hbm/Permission.hbm.xml" />
		<mapping resource="com/yozo/report/server/config/hbm/Record.hbm.xml" />
		<mapping resource="com/yozo/report/server/config/hbm/RecordIndex.hbm.xml" />
		<mapping resource="com/yozo/report/server/config/hbm/RField.hbm.xml" />
		<mapping resource="com/yozo/report/server/config/hbm/RTable.hbm.xml" />
		<mapping resource="com/yozo/report/server/config/hbm/TableRule.hbm.xml" />
		<mapping resource="com/yozo/report/server/config/hbm/Template.hbm.xml" />
		<mapping resource="com/yozo/report/server/config/hbm/WriteMode.hbm.xml" />
		<mapping resource="com/yozo/report/server/config/hbm/WriteModeItem.hbm.xml" />
	</session-factory>
</hibernate-configuration>