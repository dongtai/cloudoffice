<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.yozo.report.commons.domain.databaseObject">
	<class name="Template" table="rpt_sys_template">
		<id name="id">
			<generator class="native" />
		</id>
		<property name="number">
			<column name="number" not-null="true">
				<comment>模板编号</comment>
			</column>
		</property>
		<property name="name">
			<column name="name" not-null="true">
				<comment>模板名称</comment>
			</column>
		</property>
		<property name="fileName">
			<column name="fileName" length="64" not-null="true">
				<comment>文件名</comment>
			</column>
		</property>
		<property name="path">
			<column name="path" not-null="true">
				<comment>模板路径</comment>
			</column>
		</property>
		<property name="attrFlag">
			<column name="attrFlag">
				<comment>基本属性集</comment>
			</column>
		</property>
		<set name="permissions" cascade="all">
			<key>
				<column name="template_id" />
			</key>
			<one-to-many class="Permission" />
		</set>
		<set name="rtables" cascade="all">
			<key>
				<column name="template_id">
					<comment>模板id</comment>
				</column>
			</key>
			<one-to-many class="RTable" />
		</set>
		<set name="tableRules" cascade="all">
			<key>
				<column name="template_id" />
			</key>
			<one-to-many class="TableRule" />
		</set>
		<property name="lockCond">
			<column name="lockCond">
				<comment>锁定条件</comment>
			</column>
		</property>
		<property name="creatorId">
			<column name="creatorId" not-null="true">
				<comment>创建者ID</comment>
			</column>
		</property>
		<property name="createDate" not-null="true">
			<column name="createDate">
				<comment>创建时间</comment>
			</column>
		</property>
		<property name="modifierId">
			<column name="modifierId">
				<comment>上次修改者ID</comment>
			</column>
		</property>
		<property name="modifyDate">
			<column name="modifyDate">
				<comment>上次修改时间</comment>
			</column>
		</property>
		<set name="records" inverse="true" cascade="delete">
			<key>
				<column name="template_id" />
			</key>
			<one-to-many class="Record" />
		</set>
		<set name="addDetailRules" inverse="true" cascade="delete">
			<key>
				<column name="template_id" />
			</key>
			<one-to-many class="AddDetailRule" />
		</set>
		<set name="delDetailRules" inverse="true" cascade="delete">
			<key>
				<column name="template_id" />
			</key>
			<one-to-many class="DelDetailRule" />
		</set>
		<set name="newFormRules" inverse="true" cascade="delete">
			<key>
				<column name="template_id" />
			</key>
			<one-to-many class="NewFormRule" />
		</set>
		<set name="delFormRules" inverse="true" cascade="delete">
			<key>
				<column name="template_id" />
			</key>
			<one-to-many class="DelFormRule" />
		</set>
		<set name="hyperlinks" inverse="true" cascade="delete">
			<key>
				<column name="targetTemplate_id" />
			</key>
			<one-to-many class="HyperLink" />
		</set>
	</class>
</hibernate-mapping>
