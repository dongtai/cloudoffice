<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.yozo.report.commons.domain.databaseObject">
	<class name="RTable" table="rpt_sys_rtable">
		<id name="id">
			<generator class="native" />
		</id>
		<many-to-one name="template">
			<column name="template_id">
				<comment>所在模板id</comment>
			</column>
		</many-to-one>
		<many-to-one name="dtable" cascade="all" lazy="false">
			<column name="dtable_id">
				<comment>对应的物理表id</comment>
			</column>
		</many-to-one>
		<set name="rfields" cascade="all">
			<key>
				<column name="rtable_id">
					<comment>对应的RTable表id</comment>
				</column>
			</key>
			<one-to-many class="RField" />
		</set>
		<property name="attrFlag">
			<column name="attrFlag">
				<comment>基本属性集</comment>
			</column>
		</property>
		<property name="alias">
			<column name="alias">
				<comment>别名</comment>
			</column>
		</property>
		<property name="mode">
			<column name="mode">
				<comment>模式</comment>
			</column>
		</property>
		<property name="position">
			<column name="position">
				<comment>位置</comment>
			</column>
		</property>
		<property name="relation">
			<column name="relation">
				<comment>对应关系</comment>
			</column>
		</property>
		<set name="readRules_from" table="rpt_sys_readrule_rtable" inverse="true" cascade="delete">
			<key>
				<column name="rtable_id">
					<comment>RTable的id</comment>
				</column>
			</key>
			<many-to-many class="ReadRule" column="readRule_id" />
		</set>
		<set name="readRules_to" inverse="true" cascade="delete">
			<key>
				<column name="fillTable_id" />
			</key>
			<one-to-many class="ReadRule" />
		</set>
		<set name="modifyRules" inverse="true" cascade="delete">
			<key>
				<column name="rtable_id" />
			</key>
			<one-to-many class="ModifyRule" />
		</set>
		<set name="addDetailRules" inverse="true" cascade="delete">
			<key>
				<column name="rtable_id" />
			</key>
			<one-to-many class="AddDetailRule" />
		</set>
		<set name="delDetailRules" inverse="true" cascade="delete">
			<key>
				<column name="rtable_id" />
			</key>
			<one-to-many class="DelDetailRule" />
		</set>
		<set name="joinCondOnLefts" inverse="true" cascade="delete">
			<key>
				<column name="leftTable_id" />
			</key>
			<one-to-many class="JoinCond" />
		</set>
		<set name="joinCondOnRights" inverse="true" cascade="delete">
			<key>
				<column name="rightTable_id" />
			</key>
			<one-to-many class="JoinCond" />
		</set>
		<set name="fillModes" inverse="true" cascade="delete">
			<key>
				<column name="rtable_id" />
			</key>
			<one-to-many class="FillMode" />
		</set>
		<set name="writeModes" inverse="true" cascade="delete">
			<key>
				<column name="rtable_id" />
			</key>
			<one-to-many class="WriteMode" />
		</set>
		<set name="recordIndexs" inverse="true" cascade="delete">
			<key>
				<column name="rtable_id" />
			</key>
			<one-to-many class="RecordIndex" />
		</set>
	</class>
</hibernate-mapping>
