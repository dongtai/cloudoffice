<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="com.yozo.report.commons.domain.databaseObject.RecordIndex"
		table="rpt_sys_recordIndex">
		<id name="id">
			<generator class="native" />
		</id>
		<many-to-one name="rtable">
			<column name="rtable_id">
				<comment>对应的逻辑表id</comment>
			</column>
		</many-to-one>
		<property name="dataID">
			<column name="dataID" not-null="true">
				<comment>数据记录id</comment>
			</column>
		</property>
		<many-to-one name="record">
			<column name="record_id">
				<comment>记录id</comment>
			</column>
		</many-to-one>
	</class>
</hibernate-mapping>
