<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.yozo.report.commons.domain.databaseObject">
	<class name="Record" table="rpt_sys_record">
		<id name="id">
			<generator class="native" />
		</id>
		<many-to-one name="template">
			<column name="template_id">
				<comment>对应的模板id</comment>
			</column>
		</many-to-one>
		<property name="creatorOrgID">
			<column name="creatorOrgID">
				<comment>创建者所在部门ID</comment>
			</column>
		</property>
		<property name="attrFlag">
			<column name="attrFlag">
				<comment>基本属性集</comment>
			</column>
		</property>
		<property name="lockState">
			<column name="lockState">
				<comment>锁状态</comment>
			</column>
		</property>
		<set name="recordIndexs" cascade="all">
			<key>
				<column name="record_id">
					<comment>记录id</comment>
				</column>
			</key>
			<one-to-many class="RecordIndex" />
		</set>
		<property name="creatorId">
			<column name="creatorId" not-null="true">
				<comment>创建者ID</comment>
			</column>
		</property>
		<property name="createDate" not-null="true">
			<column name="createDate">
				<comment>创建时间</comment>
			</column>
		</property>
		<property name="modifierId">
			<column name="modifierId">
				<comment>修改者ID</comment>
			</column>
		</property>
		<property name="modifyDate">
			<column name="modifyDate">
				<comment>创建时间</comment>
			</column>
		</property>
	</class>
</hibernate-mapping>
